{
    "name": "electron-dev",
    "dockerFile": "docker/Dockerfile",
    "workspaceFolder": "/",
    "shutdownAction": "stopContainer",
    "runArgs": [
        "--privileged"
    ],
    "containerEnv": {
        "DISPLAY": ":1"
    },
    "forwardPorts": [
        "5900:5900"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "git.ignoreMissingGitWarning": true
            },
            "extensions": [
                "eamodio.gitlens",
                "MichaelCurrin.auto-commit-msg"
            ]
        }
    }
}